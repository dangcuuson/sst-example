{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        // noEmit because we only use tsc for typechecking & linting. js files will be output by bundler
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "./globalTypes.d.ts"
    ]
}